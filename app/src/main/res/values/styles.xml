<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textToWrite" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_to_write_font_size</item>
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="nextTextToWrite" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_to_write_font_size</item>
        <item name="android:textColor">@color/greyColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="nextNextTextToWrite" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_to_write_font_size</item>
        <item name="android:textColor">@color/lightGrayColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="wpmStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/wpm_font_size</item>
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>
